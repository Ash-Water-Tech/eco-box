<!DOCTYPE html>
<html>
  <head>
    <title>EcoBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
  <div class="user-sign-up">
    <%= link_to "ユーザーサインアップ", new_user_registration_path %>
  </div>
  <div class="user-login">
    <%= link_to "登録済みユーザーログイン", new_user_session_path %>
  </div>
  <% if user_signed_in? %>
  <div class="store-name"><%= current_user.nickname %>
  <div class="logout">
    <%= link_to "ユーザーログアウト" , destroy_user_session_path, method: :delete%>
  </div>
  <% end %>
  <br>
  <br>
  <div class="store-sign-up">
    <%= link_to "ショップサインアップ", new_store_registration_path%>
  </div>
  <div class="store-login">
    <%= link_to "登録済みショップ様ログイン", new_store_session_path%>
  </div>
  <% if store_signed_in? %>
  <div class="store-name"><%= current_store.name %>
  <div class="logout">
    <%= link_to "ショップログアウト" , destroy_store_session_path, method: :delete%>
  </div>
  <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
